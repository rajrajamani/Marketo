# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET		/savedConfig							Application.savedConfig
GET		/showConversionFiles					Application.showConversionFiles
*       /smsCallback							Application.smsCallback
GET		/cancelCampaign							Application.cancelCampaign
*       /addGCLID								Application.addGCLID
GET		/execFormulaStatus						Application.execFormulaStatus
*		/phoneQuery								Application.phoneQuery
*       /add									Application.addScores

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
